<p id="notice"><%= notice %></p>

<div class="alert alert-info">
  <h1 align="center">Users</h1>
</div>

<div class="alert alert-success">
<table class="table  table-striped">
  <thead>
    <tr>
      <th><%= link_to 'New User', new_user_path, class: "btn  btn-warning" %></th>
      <th>Nickname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:micro), class: "img-circle" %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-success" %>
          <%= link_to 'Destroy', user, {method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
