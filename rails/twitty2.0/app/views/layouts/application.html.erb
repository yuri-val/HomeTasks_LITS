<!DOCTYPE html>
<html>
    <head>
        <title>Twitty20</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <nav class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="/">
                        Twitty
                    </a>
                    <ul class="nav">
                        <li>
                            <a href="/users">Users</a>
                        </li>
                        <li>
                            <a href="/twits">Twits</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <span class="glyphicon glyphicon-user"><%= render 'devise/menu/registration_items' %></span>
                        </li>
                        <li>
                            <span class="glyphicon glyphicon-log-in"><%= render 'devise/menu/login_items' %></span>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <div id="container">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <%= yield %>
            <div></body>
        </html>
